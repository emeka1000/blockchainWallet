datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  accounts  Account[]
  createdAt DateTime  @default(now())
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

model Account {
  amount      Float?
  balance     Float?
  createdAt   DateTime @default(now())
  id          String   @id @default(cuid())
  transaction String?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}